{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap":true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "stripInternal": true,
    "pretty": true,
    "declaration": true,
    "outDir": "dist",
    "typeRoots": [ "./typings/", "./node_modules/@types"]
  },
  "exclude": [
    "dist",
    "node_modules",
    "test",
    "web",
    "build"
  ]
}

